@page "/ucsdocentes/delete"
@using Microsoft.EntityFrameworkCore
@using Momentum.UI.Models
@inject IDbContextFactory<Momentum.UI.Data.AppDbContext2> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>UCsDocente</h2>
    <hr />
    @if (ucsdocente is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">DocenteId</dt>
            <dd class="col-sm-10">@ucsdocente.DocenteId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UCId</dt>
            <dd class="col-sm-10">@ucsdocente.UCId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SemestreId</dt>
            <dd class="col-sm-10">@ucsdocente.SemestreId</dd>
        </dl>
        <EditForm method="post" Model="ucsdocente" OnValidSubmit="DeleteUCsDocente" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(ucsdocente is null)">Delete</button> |
            <a href="/ucsdocentes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private UCsDocente? ucsdocente;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ucsdocente = await context.UCsDocente.FirstOrDefaultAsync(m => m.Id == Id);

        if (ucsdocente is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteUCsDocente()
    {
        using var context = DbFactory.CreateDbContext();
        context.UCsDocente.Remove(ucsdocente!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ucsdocentes");
    }
}
