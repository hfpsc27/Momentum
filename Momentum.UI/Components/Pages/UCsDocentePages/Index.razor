@page "/ucsdocentes"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Momentum.UI.Models
@using Momentum.UI.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Momentum.UI.Data.AppDbContext2> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="ucsdocentes/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.UCsDocente.Include(d => d.Docente).Include(u => u.UC).Include(s => s.Semestre)">
    @*<PropertyColumn Property="ucsdocente => ucsdocente.DocenteId" />*@
    <PropertyColumn Property="ucsdocente => ucsdocente.Docente.Nome" />
    @*<PropertyColumn Property="ucsdocente => ucsdocente.UCId" />*@
    <PropertyColumn Property="ucsdocente => ucsdocente.UC.UnidadeCurricula" />
    @*<PropertyColumn Property="ucsdocente => ucsdocente.SemestreId" />*@
    <PropertyColumn Property="ucsdocente => ucsdocente.Semestre.Descricao" />

    <TemplateColumn Context="ucsdocente">
        <a href="@($"ucsdocentes/edit?id={ucsdocente.Id}")">Edit</a> |
        <a href="@($"ucsdocentes/details?id={ucsdocente.Id}")">Details</a> |
        <a href="@($"ucsdocentes/delete?id={ucsdocente.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private AppDbContext2 context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
