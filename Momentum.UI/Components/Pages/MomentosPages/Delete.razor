@page "/momentos/delete"
@using Microsoft.EntityFrameworkCore
@using Momentum.UI.Models
@inject IDbContextFactory<Momentum.UI.Data.AppDbContext2> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Momentos</h2>
    <hr />
    @if (momentos is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@momentos.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DiasUteisLancamentoAvaliacao</dt>
            <dd class="col-sm-10">@momentos.DiasUteisLancamentoAvaliacao</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DiasAvisoDataMomento</dt>
            <dd class="col-sm-10">@momentos.DiasAvisoDataMomento</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DiasAvisoLancamentoAvaliacao</dt>
            <dd class="col-sm-10">@momentos.DiasAvisoLancamentoAvaliacao</dd>
        </dl>
        <EditForm method="post" Model="momentos" OnValidSubmit="DeleteMomentos" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(momentos is null)">Delete</button> |
            <a href="/momentos">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Momentos? momentos;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        momentos = await context.Momentos.FirstOrDefaultAsync(m => m.Id == Id);

        if (momentos is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMomentos()
    {
        using var context = DbFactory.CreateDbContext();
        context.Momentos.Remove(momentos!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/momentos");
    }
}
