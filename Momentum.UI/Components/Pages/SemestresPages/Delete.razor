@page "/semestres/delete"
@using Microsoft.EntityFrameworkCore
@using Momentum.UI.Models
@inject IDbContextFactory<Momentum.UI.Data.AppDbContext2> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Semestres</h2>
    <hr />
    @if (semestres is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Descricao</dt>
            <dd class="col-sm-10">@semestres.Descricao</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DtIni</dt>
            <dd class="col-sm-10">@semestres.DtIni</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DtFim</dt>
            <dd class="col-sm-10">@semestres.DtFim</dd>
        </dl>
        <EditForm method="post" Model="semestres" OnValidSubmit="DeleteSemestres" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(semestres is null)">Delete</button> |
            <a href="/semestres">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Semestres? semestres;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        semestres = await context.Semestres.FirstOrDefaultAsync(m => m.Id == Id);

        if (semestres is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSemestres()
    {
        using var context = DbFactory.CreateDbContext();
        context.Semestres.Remove(semestres!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/semestres");
    }
}
