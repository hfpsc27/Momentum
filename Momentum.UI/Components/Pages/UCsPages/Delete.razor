@page "/ucs/delete"
@using Microsoft.EntityFrameworkCore
@using Momentum.UI.Models
@inject IDbContextFactory<Momentum.UI.Data.AppDbContext2> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>UCs</h2>
    <hr />
    @if (ucs is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UnidadeCurricula</dt>
            <dd class="col-sm-10">@ucs.UnidadeCurricula</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">InternalCod</dt>
            <dd class="col-sm-10">@ucs.InternalCod</dd>
        </dl>
        <EditForm method="post" Model="ucs" OnValidSubmit="DeleteUCs" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(ucs is null)">Delete</button> |
            <a href="/ucs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private UCs? ucs;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ucs = await context.UCs.FirstOrDefaultAsync(m => m.Id == Id);

        if (ucs is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteUCs()
    {
        using var context = DbFactory.CreateDbContext();
        context.UCs.Remove(ucs!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ucs");
    }
}
